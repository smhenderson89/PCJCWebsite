<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../../partials/head'); %>
</head>
<body class="container">
<header>
  <%- include('../../partials/header'); %>
</header>
<div class ="row mb-3">
    <h3 class="text-center">Admin - Orchid Input Form</h3>
</div>

<!-- Submission form -->

<div class = "container">
    <form class = "needs-validation" id="submissionForm" enctype="multipart/form-data" novalidate>
        <!-- Exhibitor Name input from API -->
        <div class = "row mb-3">
            <div class = "col-3">
                <label for="exhibitorSelect" class = "form-label">Choose a Previous Exhibitor:</label>
            </div>
            <div class = "col-6">
                <select class = "form-select" name="exhibitorSelect" id="exhibitorSelect" required>
                    <option value="" disabled selected>Select Exhibitor</option>
                </select>
                <div class = "valid-feedback"></div>
                <div class = "invalid-feedback">Select an exhibitor from the dropdown or check the "New Exhibitor" box.</div>
            </div>
        </div>
        <div class = "row mb-3">
            <div class = "col-3">
                <div class = "form-check">
                    <input class = "form-check-input" type="checkbox" value="" id="newExhibitorCheck">
                    <label class = "form-check-label" for="newExhibitorCheck">New Exhibitor?</label>
                </div>
                <div class = "valid-feedback"></div>
                <div class = "invalid-feedback">Please check if this is a new exhibitor.</div>
            </div>
            <div class = "col-6">
                <input type="text" class="form-control" id="newExhibitorNameInput" name="newExhibitorName" disabled>
                <div class = "valid-feedback"></div>
                <div class = "invalid-feedback">Please enter a new exhibitor name.</div>
                <div class = "duplicate-feedback">Exhibitor already exists in database. Double check spelling or select from the dropdown menu.</div>
            </div>
        </div>
        <hr>
        <div class = "row mb-3">
            <div class = "col-4">
                <label for="awardSelect">Choose a Previous Award Type</label>
            </div>
            <div class = "col-4">
                <select class = "form-select" name="awardSelect" id="awardSelect" required>
                    <option value="" disabled selected>Select Award</option>
                </select>
                <div class = "valid-feedback"></div>
                <div class = "invalid-feedback">Select an award from the dropdown or check the "New Award Type" box.</div>
                
            </div>
        </div>
        <div class = "row mb-3">
            <div class = "col-3">
                <div class = "form-check">
                    <input class = "form-check-input" type="checkbox" value="" id="newAwardTypeCheck">
                    <label class = "form-check-label" for="newAwardTypeCheck">New Award Type?</label>
                </div>
            </div>
            <div class = "col-3">
                <input type="text" class="form-control" id="newAwardTypeInput" name="newAwardType" disabled>
                <div class = "valid-feedback"></div>
                <div class = "invalid-feedback">Please enter a new award type.</div>
                <div class = "duplicate-feedback">Award type already exists in database. Double check spelling or select from the dropdown menu.</div>
            </div>
        </div>
        <hr>
        <div class = "row mb-3">
            <div class = "col-3">
                 <div class = "form-label">Award Value</div>
            </div>
            <div class = "col-3">
                <input type="text" class="form-control" id="awardValue" name = "awardValue" placeholder="##" required>
                <div class = "valid-feedback"></div>
                <div class = "invalid-feedback">Please enter a valid award value.</div>
            </div>
            <div class = "col-3">
                <input class = "form-check-input" type="checkbox" value="" id="nullAwardValueCheck">
                <label class = "form-check-label" for="nullAwardValueCheck">Award Value N/A?</label>
            </div>
        </div>
        <hr>
        <div class = "row mb-3">
            <div class = "col-3">
                <div class = "form-label">Award Number</div>
            </div>
            <div class = "col-3">
                <input type="text" class="form-control" id="awardNumber" name = "awardNumber" placeholder="" required>
                <div class = "valid-feedback"></div>
                <div class = "invalid-feedback">Please enter a valid award number.</div>
                <div class = "awardConflict-feedback" >Award number already exists.</div>
            </div>
        </div>
        <hr>
        <div class = "row mb-3">
            <div class = "col-2">
                <div class = "form-label">Event Title?</div>
            </div>
            <div class = "col-10">
                <select class = "form-select" name="eventSelect" id="eventSelect" required>
                    <option value="" disabled selected>Select Event</option>
                </select>
                <div class = "valid-feedback"></div>
                <div class = "invalid-feedback">Select an event from the dropdown or check the "New Event" box.</div>
            </div>
        </div>
        <div class = "row mb-3">
            <div class = "col-3">
                <div class = "form-check">
                    <input class = "form-check-input" type="checkbox" value="" id="newEventCheck">
                    <label class = "form-check-label" for="newEventCheck">New Event Name?</label>
                </div>
            </div>
            <div class = "col-9">
                <input type="text" id="newEventInput" name="newEvent" class="form-control" placeholder="Event Title" disabled>
                <div class = "valid-feedback"></div>
                <div class = "invalid-feedback">Please enter a new event title.</div>
            </div>
        </div>
        <hr>
        <div class = "row mb-3">
            <div class = "col-3">
                <div class="form-label">Event Date</div>
            </div>
            <div class = "col-6">
                <input type="date" id="eventDate" name="eventDate" required min = "2015-01-01" max = "2026-01-01" class="form-control">
                <div class = "valid-feedback"></div>
                <div class = "invalid-feedback">Please enter a valid event date.</div>
            </div>
        </div>
        <hr>
        <div class = "row mb-3">
            <div class = "col-3">
                <div class = "form-label">Previous Genus?</div>
            </div>
            <div class = "col-6">
                <select class = "form-select" name="genusSelect" id="genusSelect" required>
                    <option value="" disabled selected>Select Genus</option>
                </select>
                <div class = "valid-feedback"></div>
                <div class = "invalid-feedback">Select a genus from the dropdown or check the "New Genus" box and enter a name.</div>
            </div>
        </div>
        <div class = "row mb-3">
            <div class = "col-3">
                <div class = "form-check">
                    <input class = "form-check-input" type="checkbox" value="" id="newGenusCheck">
                    <label class = "form-check-label" for="newGenusCheck">New Genus?</label>
                </div>
            </div>
            <div class = "col-6">
                <input type="text" id="newGenusInput" name="newGenus" class="form-control" placeholder="Genus Name" disabled>
                <div class = "valid-feedback"></div>
                <div class = "invalid-feedback">Please enter a new genus name.</div>
            </div>
        </div>
        <hr>
        <div class = "row mb-3">
            <div class = "col-3">
                <div class = "form-label">Hybrid/species</div>
            </div>
            <div class = "col-9">
                <input type="text" class="form-control" name = "HybridSpeciesInput" id="HybridSpeciesInput" placeholder="Hybrid or Species" required>
                <div class = "valid-feedback"></div>
                <div class = "invalid-feedback">Please enter a hybrid/species.</div>
            </div>
        </div>
        <hr>
        <div class = "row mb-3">
            <div class = "col-2">
                <div class = "form-label">Clonal Name</div>
            </div>
            <div class = "col-2 text-center">
                <input class = "form-check-input" type="checkbox" value="" id="clonalNACheck">
                <label class = "form-check-label" for="clonalNACheck">N/A</label>
                <div class = "valid-feedback"></div>
            </div>
            <div class = "col-8">
                <input type="text" class="form-control" id="clonalName" name = "clonalName" placeholder="Clonal Name (plaintext)" required>
                <div class = "valid-feedback"></div>
                <div class = "invalid-feedback">Please enter a clonal name or check the N/A box if there is no clonal name.</div>
            </div>
        </div>
        <hr>
        <div class = "row mb-3">
            <div class = "col-3">
                <div class = "form-label">Cross Type</div>
            </div>
            <div class = "col-6">
                <div class = "form-check form-check-inline">
                     <input class = "form-check-input" type="radio" value="" name = "radioCross" id="radioSpecies" checked>
                     <label class = "form-check-label" for="radioSpecies">Species</label>
                    <div class = "valid-feedback"> </div> <!-- Left empty for formatting-->
                </div>
                <div class = "form-check form-check-inline">
                    <input class = "form-check-input" type="radio" value="" name = "radioCross" id="radioNA">
                    <label class = "form-check-label" for="radioNA">N/A</label>
                    <div class = "valid-feedback"> </div> <!-- Left empty for formatting-->
                </div>
                <div class = "form-check form-check-inline">
                    <input class = "form-check-input" type="radio" value="" name = "radioCross" id="radioNewSpecies">
                    <label class = "form-check-label" for="radioNewSpecies">New Cross</label>
                    <div class = "valid-feedback"></div>
                </div>

                <div class = "invalid-feedback">Select an option for the cross type.</div>
            </div>
        </div>
        <div class = "row mb-3">
            <div class = "col-3">
                <div>Enter New Cross: </div>
            </div>
            <div class = "col-9">   
                <input type="text" class="form-control" id="NewcrossName" name = "crossName" placeholder="Cross (plaintext)" required disabled>
                <div class = "valid-feedback"></div>
                <div class = "invalid-feedback">Please enter a name for the new cross.</div>
            </div>
        </div>
        <hr>
        <div class = "row mb-3">
            <div class = "col-3">
                <div class = "form-label">Photographer</div>
            </div>
            <div class = "col-6">
                <select class = "form-select" name="photographerSelect" id="photographerSelect" required>
                    <option value="" disabled selected>Select Photographer</option>
                </select>
                <div class = "valid-feedback">Looks good!</div>
                <div class = "invalid-feedback">Select a photographer from the dropdown or check the "New Photographer" checkbox and enter a name.</div>
            </div>
        </div>
        <div class = "row mb-3">
            <div class = "col-3">
                <div class = "form-check">
                    <input class = "form-check-input" type="checkbox" value="" id="newPhotographerCheck">
                    <label class = "form-check-label" for="newPhotographerCheck">New Photographer?</label>
                </div>
                <div class = "valid-feedback">Looks good!</div>
                <div class = "invalid-feedback">Please check if this is a new photographer.</div>
            </div>
            <div class = "col-6">   
                <input type="text" class="form-control" id="newPhotographerInput" name = "photographer" placeholder="Photographer" required disabled>
                <div class = "valid-feedback"></div>
                <div class = "invalid-feedback">Please enter a name for the new photographer.</div>
            </div>
        </div>
        <hr>
        <div class = "row mb-3">
            <div class = "col-3">
                <div for="formFile" class="form-label">Award Photo</div>
                <div class = "small text-muted">Max file size: 10MB</div>
            </div>
            <div class = "col-3">
                <input class="form-check-input" type="checkbox" value="" id="noPhotoCheck">
                <label class="form-check-label" for="noPhotoCheck">No Photo right now?</label>
            </div>
            <div class = "col-6">
                <input class="form-control" type="file" id="awardPhoto" name = "awardPhoto" required>
            </div>
        </div>
        <hr>
        <div class = "row mb-3">
            <h5 class ="text-center">Plant Measurements (in centimeters)</h5>
            <div class = "muted text-center">If measurement is not applicable, enter N/A</div>
        </div>

        <div class= "row mb-3">
            <div class = "col-3">
                <div class = "form-label">Natural Spread (NS)</div>
                <div class = "valid-feedback"></div>
            </div>
            <div class = "col-3">
                <input type="text" class="form-control" id="NS" name = "NS" placeholder="XX" required>
                <div class = "valid-feedback"></div>
                <div class = "invalid-feedback">Please enter a valid measurement or N/A.</div>
            </div>
            <div class = "col-3">
                <div class = "form-label">Natural Spread Vertical (NSV)</div>
            </div>
             <div class = "col-3">
                <input type="text" class="form-control" id="NSV" name = "NSV" placeholder="XX" required>
                <div class = "valid-feedback"></div>
                <div class = "invalid-feedback">Please enter a valid measurement or N/A.</div>
            </div>
        </div>
        <div class = "row mb-3">
            <div class = "col-3">
                <div class = "form-label">Dorsal Speal Width (DSW)</div>
            </div>
             <div class = "col-3">
                <input type="text" class="form-control" id="DSW" name = "DSW" placeholder="XX" required>
                <div class = "valid-feedback"></div>
                <div class = "invalid-feedback">Please enter a valid measurement or N/A.</div>
            </div>
            <div class = "col-3">
                <div class = "form-label">Dorsal Speal Length (DSL)</div>
            </div>
             <div class = "col-3">
                <input type="text" class="form-control" id="DSL" name = "DSL" placeholder="XX" required>
                <div class = "valid-feedback"></div>
                <div class = "invalid-feedback">Please enter a valid measurement or N/A.</div>
            </div>
        </div>
        <div class = "row mb-3">
            <div class = "col-3">
                <div class = "form-label">Petal Width (PETW)</div>
            </div>
             <div class = "col-3">
                <input type="text" class="form-control" id="PETW" name = "PETW" placeholder="XX" required>
                <div class = "valid-feedback"></div>
                <div class = "invalid-feedback">Please enter a valid measurement or N/A.</div>
            </div>
            <div class = "col-3">
                <div class = "form-label">Petal Length (PETL)</div>
            </div>
            <div class = "col-3">
                <input type="text" class="form-control" id="PETL" name = "PETL" placeholder="XX" required>
                <div class = "valid-feedback"></div>
                <div class = "invalid-feedback">Please enter a valid measurement or N/A.</div>
            </div>
        </div>
        <hr>
        <h5>
            <div class = "form-label text-center">Select option for measurements</div>
        </h5>
        <div class = "row mb-3">
            <div class ="col-4">
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="measurements" id="Lip&LateralSepalOption" checked>
                    <label class="form-check-label" for="Lip&LateralSepalOption">Lip and Lateral Sepal</label>
                </div>
            </div>
            <div class = "col-4">
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="measurements" id="Pouch&SynsepalOption">
                    <label class="form-check-label" for="Pouch&SynsepalOption">Pouch and Synsepal</label>
                </div>
            </div>
            <div class = "col-4">
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="measurements" id="OtherOption">
                    <label class="form-check-label" for="OtherOption">Other (Displays, etc.)</label>
                </div>
            </div>
        </div>
        <div id = "lipLateralGroup">
            <h6 class="text-center">Lip and Lateral Sepal</h6>
            <div class = "row mb-3">
                <div class = "col-3">
                    <div class = "form-label">Lateral Sepal Width (LSW)</div>
                </div>
                <div class = "col-3">
                    <input type="text" class="form-control" id="lsw" name = "lsw" placeholder="XX">
                </div>
                <div class = "col-3">
                    <div class = "form-label">Lateral Sepal Length (LSL)</div>
                </div>
                <div class = "col-3">
                    <input type="text" class="form-control" id="lsl" name = "lsl" placeholder="XX">
                </div>
            </div>
            <div class = "row mb-3">
                <div class = "col-3">
                    <div class = "form-label">Lip Width (LIPW)</div>
                </div>
                <div class = "col-3">
                    <input type="text" class="form-control" id="lipw" name = "lipw" placeholder="XX">
                </div>
                <div class = "col-3">
                    <div class = "form-label">Lip Length (LIPL)</div>
                </div>
                <div class = "col-3">
                    <input type="text" class="form-control" id="lipl" name = "lipl" placeholder="XX">
                </div>
            </div>
        </div>
        <!-- Show Lip and Lateral group while updating the html, change to display none when not needed -->
        <div id = "pouchSynsepalGroup" style = "display:none">
            <h6 class="text-center">Pouch and Synsepal</h6>
            <div class = "row mb-3">
                <div class = "col-3">
                    <div class = "form-label">Synsepal Width (SYNSW)</div>
                </div>
                <div class = "col-3">
                    <input type="text" class="form-control" id="synsw" name = "synsw" placeholder="XX">
                </div>
                <div class = "col-3">
                    <div class = "form-label">Synsepal Length (SYNSL)</div>
                </div>
                <div class = "col-3">
                    <input type="text" class="form-control" id="synsl" name = "synsl" placeholder="XX">
                </div>
            </div>
            <div class = "row mb-3">
                <div class = "col-3">
                    <div class = "form-label">Pouch Width (PCHW)</div>
                </div>
                <div class = "col-3">
                    <input type="text" class="form-control" id="pouchw" name = "pouchw" placeholder="XX">
                </div>
                <div class = "col-3">
                    <div class = "form-label">Pouch Length (PCHL)</div>
                </div>
                <div class = "col-3">
                    <input type="text" class="form-control" id="pouchl" name = "pouchl" placeholder="XX">
                </div>  
            </div>
        </div>
        <hr>
        <div id = "generalMeasurements">
            <h5 class = "text-center">General Measurements</h5>
            <div class ="row mb-3">
                <div class = "col-3">
                    <div class = "form-label">Number of Flowers</div>
                </div>
                <div class = "col-3">
                    <input type="text" class="form-control" id="numflowers" name = "numflowers" placeholder="XX" required>
                    <div class = "valid-feedback"> </div>
                    <div class = "invalid-feedback">Please enter a valid number.</div>
                </div>
                <div class = "col-3">
                    <div class = "form-label">Number of Buds</div>
                </div>
                 <div class = "col-3">
                    <input type="text" class="form-control" id="numBuds" name = "numBuds" placeholder="XX" required>
                    <div class = "valid-feedback"> </div>
                    <div class = "invalid-feedback">Please enter a valid number.</div>
                </div>
            </div>
            <div class = "row mb-3">
                <div class = "col-3">
                    <div class = "form-label">Number of Inflorescences</div>
                </div>
                <div class = "col-3">
                    <input type="text" class="form-control" id="numInfloresecnes" name = "numInfloresecnes" placeholder="XX" required>
                    <div class = "valid-feedback"> </div>
                    <div class = "invalid-feedback">Please enter a valid number.</div>
                </div>
                <div class = "col-3">
                    <div class = "form-label">Inflorescence Length</div>
                </div>
                 <div class = "col-3">
                    <input type="text" class="form-control" id="infloLength" name = "infloLength" placeholder="XX" required>
                    <div class = "valid-feedback"> </div>
                    <div class = "invalid-feedback">Please enter a valid measurement.</div>
                </div>
            </div>

            <div class = "form-label">Plant description</div>
            <div>
                <textarea class="form-control" id="descriptionBox" name = "description" rows="5" required></textarea>
                <div class = "valid-feedback"> </div>
                <div class = "invalid-feedback">Please enter a description for the plant.</div>
            </div>

            <br>
            <input id = "submitBtn" type = "button" class = "btn btn-secondary" value = "Submit Form">
            <input id = "testBtn" type = "button" class = "btn btn-success" value = "Test Submission">
        </form>

</div>



<!-- Include list of preivous contributes for admin panel -->

<footer>
  <%- include('../../partials/footer'); %>
</footer>

<script src="/js/submit/loadInfo.js"></script>
<script src="/js/submit/formControl.js"></script>
<script src="/js/submit/formValidate.js"></script>
<script src="/js/submit/testSubmit.js"></script>

</body>
</html>