<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../../partials/head'); %>
<script src="/js/pages/login/login.js"></script>
</head>
<body class="container">

<header>
  <%- include('../../partials/header'); %>
</header>

<main>
    <div class = "container">
        <div class = "row">
            <div class = "text-center" id = "title"><h3>Login</h3></div>
        </div>
        <div class = "row" id = "inputFieldsRow">
            <form>
                <div class="form-group">
                    <label for="emailInput" id = "emailInputLabel">Email address</label>
                    <input type="email" class="form-control" id="emailInput" aria-describedby="emailHelp" placeholder="Enter email">
                </div>
                <div class="form-group">
                    <label for="passwordInput" id = "passwordInputLabel">Password</label>
                    <input type="current-password" class="form-control" id="passwordInput" placeholder="Password">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
  </div>
</main>

<footer>
  <%- include('../../partials/footer'); %>
</footer>

</body>
</html>