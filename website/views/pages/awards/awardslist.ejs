<!-- Awards list page showing all years with award counts -->

<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../../partials/head'); %>
</head>
<body class="container">

<header>
  <%- include('../../partials/header'); %>
</header>

<main>
  <div class="row">
    <div class="col-sm-8 text-center mx-auto">
        <h1>AOS Pacific Central Judging Awards</h1>
      </div>
    </div>
  </div>
  
  <% if (typeof error !== 'undefined') { %>
    <div class="alert alert-danger" role="alert">
      <%= error %>
    </div>
  <% } %>
  
  <% if (awardCounts && awardCounts.length > 0) { %>
    <% awardCounts.reverse().forEach(function(yearData) { %>
      <div class="row">
        <div class="col">
          <h6><%= yearData.year %> Awards (<%= yearData.count %> total)</h6>
        </div>
        <div class="col">
          <p><a href="/awards/<%= yearData.year %>" class="btn btn-primary">View <%= yearData.year %> Awards</a></p>
        </div>
      </div>
    <% }); %>
  <% } else { %>
    <div class="row">
      <div class="col">
        <p>No award data available at this time.</p>
      </div>
    </div>
  <% } %>

</main>

<footer>
  <%- include('../../partials/footer'); %>
  <script src="/js/services/awards-cache-service.js"></script>
</footer>

</body>
</html>