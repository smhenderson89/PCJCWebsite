{
  "name": "pcjc",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.2.0"
  },
  "private": true,
  "version": "0.0.0",
  "type": "commonjs",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js -e js,ejs",
    "dev:full": "concurrently \"pnpm run dev\" \"pnpm run sass:dev\" --names \"server,sass\" --prefix-colors \"blue,magenta\"",
    "build": "pnpm run sass:build && pnpm run build:cleanup",  
    "build:cleanup": "echo 'Build complete - CSS compiled'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPatterns=unit",
    "test:edge-cases": "jest --testPathPatterns=edge-cases",
    "sass:dev": "sass sass/main.scss:public/css/main.css --watch --source-map",
    "sass:build": "sass sass/main.scss:public/css/main.css --style=compressed --no-source-map",
    "deploy:check": "node -c server.js && echo 'Server file is valid'"
  },
  "dependencies": {
    "async": "^3.2.6",
    "axios": "^1.13.2",
    "better-sqlite3": "^12.6.2",
    "bootstrap": "^5.3.8",
    "connect-livereload": "^0.6.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "ejs": "^4.0.1",
    "escape-html": "^1.0.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jest": "^30.2.0",
    "latest": "^0.2.0",
    "livereload": "^0.10.3",
    "morgan": "^1.10.1",
    "nodemon": "^3.1.11",
    "pnpm": "^10.28.1",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1", 
    "sass": "^1.97.3",
    "@types/jest": "^29.5.12",
    "supertest": "^6.3.4"
  }
}
